@{
    ViewData["Title"] = "Home Page";
}


@model List<Event>
<br />
<div>
    <img src="~/image/books.jpg" alt="Book" width="100" height="100" class="center"/>
    <br />
    <h2 align="center"><b>Welcome to BookApplication</b></h2>

</div>
<br />
<br />

<div class="container">
    <div class="row" >
        <div class="col-6" >
            
            <h3><u>Upcoming Events</u></h3>
            <table class="table table-striped table-responsive">
                <thead>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Type</th>
                </thead
                <tbody>
                    @foreach(var obj in Model)
                    {
                        if (obj.Date > DateTime.Now && obj.Type =="Public")
                        {
                            <tr>
                                <td><a asp-controller="Event" asp-action="EventDetails" asp-route-id="@obj.Id">@obj.Title</a></td>
                                <td>@obj.Date.ToString("d")</td>
                                <td>@obj.Type</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
        <div class="col-6" >
            <h3><u>Past Events</u></h3>
            <table class="table table-striped table-responsive">
                <thead>
                <th>Title</th>
                <th>Date</th>
                <th>Type</th>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        if (obj.Date < DateTime.Now && obj.Type == "Public")
                        {
                            <tr>
                                <td><a asp-controller="Event" asp-action="EventDetails" asp-route-id="@obj.Id">@obj.Title</a></td>
                                <td>@obj.Date.ToString("d")</td>
                                <td>@obj.Type</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>

</div>
